{
	"name": "shinyguesser",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.ts",
	"scripts": {
		"start:server": "nodemon src/index.ts",
		"build": "rimraf dist && tsc",
		"ts.check": "tsc --project tsconfig.json",
		"add-build": "git add dist",
		"client-build": "cd svelte && npm i && npx vite build --outDir ../src/views",


		"client-install": "cd svelte && npm i",
		"start": "node dist/index.js",
		"serve:server": "nodemon dist/index.js",
		"serve:client": "cd svelte && npm run dev",
		"dev": "concurrently \"tsc --watch\" \"npm run serve:server\" \"npm run serve:client\"",
		"format": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-organize-imports --write ."
	},
	"author": "kripi-png",
	"license": "ISC",
	"devDependencies": {
		"@types/cors": "^2.8.14",
		"@types/express": "^4.17.19",
		"@types/node": "^20.8.6",
		"axios": "^1.5.1",
		"axios-cache-interceptor": "^1.3.1",
		"concurrently": "^8.2.1",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"nodemon": "^3.0.1",
		"pokemon": "^2.3.6",
		"pokenode-ts": "^1.20.0",
		"prettier": "^3.0.3",
		"prettier-plugin-organize-imports": "^3.2.3",
		"prettier-plugin-svelte": "^3.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2",
		"pre-commit": "^1.2.2",
		"rimraf": "^5.0.5"
	},
	"pre-commit": [
		"client-build",
		"ts.check",
		"build",
		"add-build"
	]

}
