{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,

		"baseUrl": "./server",
		"paths": {
			"*": ["node_modules/*", "server/types/*"]
		}
	},
	"include": ["./server/**/*"],
	"exclude": ["vue"]
}
